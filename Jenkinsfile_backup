podTemplate(containers: [
    containerTemplate(
        name: 'jnlp', 
        image: 'jenkins/inbound-agent:latest'
    ),
    containerTemplate(
        name: 'docker', 
        image: 'docker:dind'
    )
  ]) {

    node(POD_LABEL) {
        stage('Just a shell command') {
            container('jnlp') {
                stage('Checking contents') {
                    git branch: 'main', url: 'https://github.com/mcitukm/nginx.git'
                    sh '''
                        git version
                        pwd
                        ls -la
                        echo "token is working"
                    '''
                }
            }
        }
        
    }
}